@model SUP_MVC.Models.AddUser.AddUserViewModel

@{
    ViewData["Title"] = "AddUser";
}

<head>
    <meta charset="utf-8" />
    <title>Add User</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<style>
    .box {
        display: flex;
        flex-direction: column;
        position: relative;
        padding-left: 15%;
        width: 85%;
        justify-content: center;
    }

    .input {
        height: 40px;
        border-radius: 5px;
        outline: none;
        border-top-style: groove;
        border-right-style: groove;
        border-bottom-style: groove;
        border-left-style: groove;
        border: 1px solid #a1a1a1;
        line-height: 50%;
    }

    .cell {
        padding-top: 5px;
        float: left;
        line-height: 30px;
        margin-left: 15%;
        text-align: left;
        width: 25%;
    }
</style>
<script>


    function Check(form) {
        var pw1 = form.pw1.value;
        var pw2 = form.pw2.value;

        if (pw1 == '') {
            alert("Please enter password!");
        }
        else if (pw2 == '') {
            alert("Please enter confirm password");
        }
        else if (pw1 != pw2) {
            alert("\nPassword did not match! Please enter the right one!")
            return false;
        }
        else {
            return true;
        }
    }

</script>


<body>
    <div style="position: absolute; left: 25%; top: 10%; width: 85%;">
        <form name="pw" onsubmit="return Check(this)">

            <div class="box">
                <div class="cell">User name*<br /><input class="Username" type="text" placeholder="" required></div>
                <div class="cell">Password*<br /><input type="Password" name="pw1" placeholder="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 6 or more characters" value="" required></div>
                <div class="cell">Confirm Password*<br /><input type="Password" name="pw2" placeholder="confirm password" required> </div>
                <div class="cell">
                    User type*<br /><select class="Usertype" name="state" tabindex="11">
                        <option value=""></option>
                        <option value="admin">Administrator</option>
                        <option value="standard">Standard</option>
                    </select>
                </div>
                <div class="cell">
                    Office*<br /><select class="Office" name="office" tabindex="11">
                        <option value=""></option>
                        <option value="CCEL">CCEL</option>
                        <option value="CASL">CASL</option>
                        <option value="Chancellor's">Chancellor's office</option>
             
                    </select>
                </div>
                <div class="cell"><button type="submit" class="submitNewUser">Save</button></div>
            </div>

        </form>

    </div>
</body>

